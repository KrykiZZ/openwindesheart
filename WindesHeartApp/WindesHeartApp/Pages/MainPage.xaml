<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="WindesHeartApp.Pages.MainPage">
    <ContentPage.Content>
        <StackLayout>
            <Button Clicked="Button_Clicked" Text="Scannen en Connecten" HorizontalOptions="Center" VerticalOptions="Start" Margin="0,50,0,0"/>
            <Button Clicked="ReadBatteryContinuous" Text="Read battery Continuous" HorizontalOptions="Center" VerticalOptions="Center"/>
            <Button Clicked="ReadCurrentBattery" Text="Read current battery" HorizontalOptions="Center" VerticalOptions="Center"/>
            <Button Clicked="SetTime" Text="Set current time" HorizontalOptions="Center" VerticalOptions="Center"/>
            <Button Clicked="Disconnect" Text="Disconnecten" HorizontalOptions="Center" VerticalOptions="End"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>