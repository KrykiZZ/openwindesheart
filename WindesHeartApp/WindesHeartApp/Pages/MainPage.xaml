<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="WindesHeartApp.Pages.MainPage">
    <ContentPage.Content>
        <StackLayout>
            
            <Image Source="WindesHeartTransparent.png" BackgroundColor="{StaticResource Primary}">
                <Image.GestureRecognizers>
                    <TapGestureRecognizer 
                        Tapped="Logo_Clicked"
                        NumberOfTapsRequired="1"/>
                </Image.GestureRecognizers>
            </Image>
            
            
            
        </StackLayout>
    </ContentPage.Content>
</ContentPage>