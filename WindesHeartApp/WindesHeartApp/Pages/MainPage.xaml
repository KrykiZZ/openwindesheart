<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="WindesHeartApp.Pages.MainPage">
    <ContentPage.Content>
        <StackLayout>
            <Button Clicked="Button_Clicked" Text="Scannen" HorizontalOptions="Center" VerticalOptions="Start" Margin="0,50,0,0"/>
            <Button Clicked="Connect" Text="Connecten" HorizontalOptions="Center" VerticalOptions="Center"/>
            <Button Clicked="ReadBattery" Text="Read battery" HorizontalOptions="Center" VerticalOptions="Center"/>
            <Button TextColor="#007ACC" Clicked="Disconnect" Text="Disconnecten" HorizontalOptions="Center" VerticalOptions="End"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>